#!/bin/sh

node src/install.js

if [ -z "$BASH_EXPORTED" ]
then
  echo  'export BASH_EXPORTED=TRUE' >> ~/.bashrc
  echo  'alias a=". nama"' >> ~/.bashrc  
fi

source ~/.bashrc 
echo ""
echo "\x1b[1m======================\x1b[0m"
echo "\x1b[1mInstallation Complete!\x1b[0m"
echo "\x1b[1m======================\x1b[0m"
echo ""
echo "\x1b[31mALERT:\x1b[0m Please run the following command to enable autocompletion:"
echo "      \x1b[4m\x1b[1msource ~/.bashrc\x1b[0m"
echo ""
echo ""
